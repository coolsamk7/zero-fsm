{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@fsm/core": [
                "src/core"
            ],
            "@fsm/core/*": [
                "src/core/*"
            ],
            "@fsm/interfaces": [
                "src/interfaces"
            ],
            "@fsm/interfaces/*": [
                "src/interfaces/*"
            ],
            "@fsm/utils": [
                "src/utils"
            ],
            "@fsm/utils/*": [
                "src/utils/*"
            ]

        }
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
